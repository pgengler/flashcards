<%= link_to 'Home', root_path, class: 'navbar-brand' %>
<ul class='nav navbar-nav'>
	<li>
		<%= link_to 'New', new_card_path %>
	</li>
	<li class='dropdown random-menu'>
		<%= link_to 'Random', random_card_path %>
		<a href='#' class='dropdown-toggle' data-toggle='dropdown'>
			<span class='caret'></span>
		</a>
		<ul class='dropdown-menu' role='menu'>
			<li><%= link_to 'Random front', random_card_front_path %></li>
			<li><%= link_to 'Random back', random_card_back_path %></li>
			<li><%= link_to 'Random front or back', random_card_path %></li>
		</ul>
	</li>
	<% if @card && @card.id %>
	<li>
		<%= link_to 'Edit', edit_card_path(@card) %>
	</li>
	<li>
		<%= link_to 'Delete', card_path(@card), method: 'delete', confirm: 'Really delete this card?' %>
	</li>
	<% end %>
</ul>
